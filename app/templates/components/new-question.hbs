{{#if addNewQuestion}}
  <h3>New Question</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="inquiry">Question</label>
        {{input value=inquiry id="inquiry"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description id="description"}}
      </div>

      <!-- <div class="form-group">
        <label for="date">Date Question Posted</label>
        {{input value=date id="date"}}
      </div> -->

      <button class="btn btn-success btn-xs" {{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary btn-xs" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
