{{#if addNewQuestion}}
  <h3>New Question</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{input value=notes id="notes"}}
      </div>

      <div class="form-group">
        <label for="date">Date Question Posted</label>
        {{input value=date id="date"}}
      </div>

      <button class="btn btn-success btn-xs" {{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary btn-xs" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
