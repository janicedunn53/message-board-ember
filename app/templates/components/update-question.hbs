{{#if updateQuestionForm}}
  <h4>Update {{question.content}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <button class="btn btn-success btn-xs" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info btn-xs" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
