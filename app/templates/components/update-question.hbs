{{#if updateQuestionForm}}
  <h4>Update this question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="inquiry">Question</label>
        {{input value=inquiry id="inquiry" placeholder=question.inquiry}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description id="description" placeholder=question.description}}
      </div>

      <!-- <div class="form-group">
        <label for="date">Date Question Posted</label>
        {{input value=date id="date" placeholder=question.date}}
      </div> -->

      <button class="btn btn-success btn-xs" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info btn-xs" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
