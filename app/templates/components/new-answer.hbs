{{#if addNewAnswer}}
  <h3>New Answer</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content"}}
      </div>

      <button class="btn btn-success btn-xs" {{action 'saveAnswer' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary btn-xs" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
